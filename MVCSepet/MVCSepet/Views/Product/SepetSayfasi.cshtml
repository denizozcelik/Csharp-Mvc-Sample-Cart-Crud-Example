@using MVCSepet.Models.MyEntities

@model Cart

@{
    ViewBag.Title = "SepetSayfasi";
}

    <h2>SepetSayfasi(Cart)</h2>

@if (ViewBag.SepetBos != null)
{
    <h2 style="color:red">
        @ViewBag.SepetBos
    </h2>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>Urun İsmi</th>
            <th>Fiyatı</th>
            <th>Adedi</th>
            <th>Ara Fiyatı</th>
            <th>@Html.ActionLink("Alısverişe Devam", "ShoppingList")</th>
            <th colspan="2" style="text-align:center">İşlemler</th>
        </tr>

        @foreach (CartItem item in Model.Sepetim)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Amount</td>
                <td>@item.SubTotal</td>
                <td>@Html.ActionLink("Ürün Sil","Delete",new { id=item.ID})</td>

                <td>@Html.ActionLink("Urun Güncelle","Update",new {id=item.ID })</td>
            </tr>
        }

    </table>
}